<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Puestos APP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (true)
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Ver Publicaciones", "Publicaciones", "PUESTOS")</li>
                        <li>@Html.ActionLink("Puestos", "Index", "PUESTOS")</li>
                        <li>@Html.ActionLink("Rools", "Index", "ROLLs")</li>
                        <li>@Html.ActionLink("Usuarios", "Index", "USUARIOs")</li>
                        <li>@Html.ActionLink("NumeroMaxPuestos", "Index", "NumeroMaxPuestos")</li>
                        <li>@Html.ActionLink("Categorias", "Index", "CATEGORIAs")</li>
                        <ul class="nav navbar-nav navbar-right">
                           
                            <li>@Html.ActionLink("Cerrar sesión", "CerrarSeccion", "Home")</li>
                        </ul>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Ver Publicaciones", "Publicaciones", "PUESTOS")</li>
                        <ul class="nav navbar-nav navbar-right">
                         
                            <li>@Html.ActionLink("Iniciar sesión", "Login", "Usuarios")</li>
                        </ul>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PROGRAMACION 3</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
